{
  "name": "gitlab-copilot",
  "version": "1.0.0",
  "description": "GitLab webhook service for AI code assistant integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "format:check": "prettier --check \"src/**/*.{ts,js}\"",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testPathPattern=security --coverage",
    "test:integration": "jest --testPathPattern=integration --coverage",
    "test:e2e": "jest --testPathPattern=e2e --coverage",
    "test:performance": "jest --testPathPattern=performance --coverage",
    "test:all": "npm run test:security && npm run test:integration && npm run test:e2e && npm run test:performance",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "setup-user": "ts-node-dev --transpile-only --exit-child src/scripts/setupUser.ts",
    "db:indexes": "ts-node-dev --transpile-only --exit-child src/scripts/createDatabaseIndexes.ts"
  },
  "keywords": [
    "gitlab",
    "webhook",
    "claude",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@gitbeaker/node": "^35.8.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^5.9.0",
    "simple-git": "^3.20.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
